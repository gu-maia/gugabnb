<% @user.reviews.includes(:guest).each do |review| %>
  <div class="pb-12">
    <div class="grid grid-cols-2 grid-rows-2 flex">
      <h2 class="grid-cols-1 grid-rows-1 font-semibold"><%= review.title %></h2>
      <img src="<%= Faker::LoremFlickr.image(size: "70x50") %>" class="rounded ml-auto col-span-1 row-span-2">
      <h2 class="grid-cols-1 grid-rows-1 text-sm text-slate-500"><%= review.created_at.strftime("%B %Y") %></h2>
    </div>
    <p class="mt-3"><%= review.description %></p>
    
    <div class="flex mt-4 place-items-center">
      <img src="<%= Faker::Avatar.image(size: "60x60") %>" class="h-200 rounded-full">
      <div class="pl-4">
        <h2 class="grid-cols-1 grid-rows-1 font-semibold"><%= review.guest.full_name %>, SÃ£o Paulo, Brazil</h2>
        <h2 class="grid-cols-1 grid-rows-1 text-sm text-slate-500">Joined in <%= review.guest.created_at.year %></h2>
      </div>
    </div>
  </div>
<% end %>
