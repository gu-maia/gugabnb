<% if current_user %>
  <button data-wishlist-listing-id="<%= @listing.id %>" data-controller="wishlist" data-action="click->wishlist#add_to_wishlist" class="flex p-2 rounded-lg hover:bg-red-50 text-sm transition duration-300 ease-in-out">
    <svg id="heart-svg" fill=<%= "#{ current_user.wished?(@listing) ? 'red' : 'none' }" %> viewBox="0 0 24 24" stroke-width="1.5" stroke="<%= "#{ current_user.wished?(@listing) ? 'red' : 'currentColor' }" %>" class="w-4 h-4 mt-[3px] mr-2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z" />
    </svg>
    Save
  </button>
<% else %>
  <%= link_to new_user_session_path, class: 'flex p-2 rounded-lg hover:bg-red-50 text-sm transition duration-300 ease-in-out' do %>
    <svg id="heart-svg" fill='none' viewBox="0 0 24 24" stroke-width="1.5" stroke="currentcolor" class="w-4 h-4 mt-[3px] mr-2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z" />
    </svg>
    Save
  <% end %>
<% end %>
